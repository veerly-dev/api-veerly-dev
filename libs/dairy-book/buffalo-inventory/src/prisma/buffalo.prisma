// libs/dairy-book/buffalo-inventory/prisma/buffalo.prisma
model HealthStatus {
    id            String    @id @default(uuid())
    name          String
    severityLevel Int?
    notes         String?
    buffalo       Buffalo[]
}

model Buffalo {
    id              String   @id @default(uuid())
    userId          String
    tagId           String   @unique
    breedTypeId     String
    healthStatusId  String
    ageInMonths     Int
    weightKg        Float
    lactationStage  String
    lastCheckupDate DateTime
    notes           String?

    breedType    BreedType    @relation(fields: [breedTypeId], references: [id])
    healthStatus HealthStatus @relation(fields: [healthStatusId], references: [id])
}
