
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model BreedType {
    id           String    @id @default(uuid())
    name         String
    description  String?
    originRegion String?
    isActive     Boolean   @default(true)
    buffalo      Buffalo[]
}


// libs/dairy-book/buffalo-inventory/prisma/buffalo.prisma
model Buffalo {
    id              String   @id @default(uuid())
    userId          String
    tagId           String   @unique
    breedTypeId     String
    healthStatusId  String
    ageInMonths     Int
    weightKg        Float
    lactationStage  String
    lastCheckupDate DateTime
    notes           String?

    breedType    BreedType    @relation(fields: [breedTypeId], references: [id])
    healthStatus HealthStatus @relation(fields: [healthStatusId], references: [id])
}
